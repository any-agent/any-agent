{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "vcs": {
    "enabled": false
  },
  "files": {
    "ignoreUnknown": true,
    "maxSize": 2097152,
    "experimentalScannerIgnores": []
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "style": {
        "noNonNullAssertion": "off",
        "useConst": "error",
        "useImportType": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noConfusingVoidType": "off",
        "noAsyncPromiseExecutor": "error"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noForEach": "off",
        "useLiteralKeys": "off",
        "useArrowFunction": "off"
      },
      "nursery": {
        "noFloatingPromises": "error",
        "noMisusedPromises": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": false
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": [
        "**/*.spec.ts",
        "**/__tests__/**",
        "**/node_modules",
        "**/dist",
        "**/*.ejs",
        "**/*.go",
        "**/*.sh",
        "**/*.sample",
        "**/*.md",
        "**/*.mod",
        "**/*.sum",
        "**/*.txt",
        "**/routeTree.gen.ts"
      ],
      "linter": {
        "enabled": false
      }
    }
  ]
}
