{
  "name": "@any-agent/tools-supervisor",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && rm -rf ./dist && bun build ./src/index.ts --outdir ./dist --target=bun && cp -r ./src/debug ./dist/debug",
    "start": "bun run build && container-runtime compose up -d --build",
    "stop": "container-runtime compose down",
    "restart": "bun run stop && bun run start",
    "dev": "bun run src/index.ts",
    "test": "bun test",
    "test:integration": "bun test tests/integration",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@types/bun": "1.3.2",
    "@types/node": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@any-agent/core": "workspace:*",
    "@any-agent/scripts": "workspace:*",
    "dockerode": "^4.0.9",
    "fastify": "^5.6.2",
    "nanoid": "^5.1.6",
    "zod": "4.1.12",
    "zod-to-json-schema": "^3.24.6"
  }
}
